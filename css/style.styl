bodyColor = rgba(17, 126, 126, 1)
containerColor = rgba(70, 150, 180, 0.5)
textColor = #444
temperHoverColor = #3cc
*
  margin: none
html
  overflow-y: hidden
body
  background: bodyColor
  text-align: center
  color: textColor
  cursor: default;
.container
  background-color: containerColor
  height: 300px;
  width: 600px;
  display: inline-block;
  position: relative;
  margin-top: 20px;
  border-radius: 5px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 20px rgba(0, 0, 0, 0.1) inset;
h1
  font-family: 'Didact Gothic', sans-serif;
  font-weight: bold
  &.title
    font-size: 2.8em;
  &.location
    font-size: 2em
#temp
  cursor: pointer;
  transition: all .2s ease
  display: inline-block;
  &:hover
    color: temperHoverColor
  &:focus
    outline: none
#weatherText
  font-size: 2em
  font-weight: bold
i
  font-size: 3.5em;
  margin: 10px;
