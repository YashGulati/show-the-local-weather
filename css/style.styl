html
  overflow-y: hidden
body
  background: #E6EEF6;
  text-align: center
  color: white
.box
  height: 450px;
  width: 600px;
  display: inline-block;
  position: relative;
  margin-top: 100px;
  border-radius: 5px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 20px rgba(0, 0, 0, 0.1) inset;
  background-color: #9ED9EB
  &:before, &:after
    position: absolute;
    content: "";
    box-shadow: 0 10px 25px 20px #518C96;
    top: 40px;
    left: 25px;
    bottom: 50px;
    width: 15%;
    z-index: -1;
    -webkit-transform: rotate(-8deg);
    -moz-transform: rotate(-8deg);
    transform: rotate(-8deg)
  &:after
    -webkit-transform: rotate(8deg);
    -moz-transform: rotate(8deg);
    transform: rotate(8deg);
    right: 25px;
    left: auto
h1
  font-family: 'Didact Gothic', sans-serif;
  font-weight: bold
  &.name
    font-size: 3.5em;
    margin: 40px 0px 30px 0px
  &.location
    font-size: 2em
#temp
  cursor: pointer;
  transition: all .3s ease
  &:hover
    font-size: 2.1em;
    color: #ddd
  &:focus
    outline: none
i
  font-size: 5em;
  margin: 10px;
